<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/photomain_imageview"
            android:layout_width="@dimen/sixteen"
            android:layout_height="@dimen/sixteen"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sixteen"
            android:src="@drawable/photomain_one" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personage"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

        <ImageView
              android:id="@+id/photomain_imageview2"
            android:layout_width="@dimen/sixteen"
            android:layout_height="@dimen/sixteen"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sixteen"
            android:src="@drawable/photomain_four" />
    </RelativeLayout>
    <!-- 划分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- scrollingCache为消除拖动时出现的黑色背景 -->


        <ListView
            android:id="@+id/listView_dowm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:scrollbars="none" /> 
       
    </LinearLayout>

</LinearLayout>