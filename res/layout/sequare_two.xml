<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/sequaretwo_imageview"
            android:layout_width="@dimen/sixteen"
            android:layout_height="@dimen/sixteen"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sixteen"
            android:src="@drawable/photomain_one" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sequere"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

        <ImageView
            android:layout_width="@dimen/sixteen"
            android:layout_height="@dimen/sixteen"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/sixteen"
            android:src="@drawable/photomain_two" />
    </RelativeLayout>
    <!-- 顶栏分界线 -->

    
<!-- 图片浏览 -->
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
  <!-- 以下是gridview -->
          <ListView
	    android:id="@+id/fuye_guang" 
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="@color/baise"
	    android:layout_marginTop="3dp"/>
           
        </LinearLayout>

    
  

</LinearLayout>