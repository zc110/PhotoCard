<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty" >

            <!-- 头像 -->

            <ImageView
                android:id="@+id/imagview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/sixteen"
                android:background="@drawable/circle"
                android:src="@drawable/head" />
            <!-- 等待戈多 -->

            <TextView
                android:id="@+id/geduo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/eleven"
                android:layout_marginTop="@dimen/twentyfive"
                android:layout_toRightOf="@id/imagview"
               
                android:textColor="@color/waiting"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iamgevew_add"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17sp"
                android:layout_marginTop="24dp"
                android:src="@drawable/photomain_three" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty" >
        </LinearLayout>
        <!--  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical" >

            <!-- 1张卡片 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4" >

                <TextView
                    android:id="@+id/textview_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen"
                    android:textColor="@color/background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textview_one"
                    android:text="@string/card"
                    android:textColor="@color/background"
                    android:textSize="@dimen/twelve" />

                <ImageView
                    android:id="@+id/imageview_rectangle"
                    android:layout_width="13dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/sixteen"
                    android:src="@drawable/photomain_two" />
            </RelativeLayout>
            <!-- 权重等比占位 -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>